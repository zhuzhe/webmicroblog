<h1>New user</h1>

<% form_for(@user,:html => {:multipart => true} ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :nick_name %><br />
    <%= f.text_field :nick_name %>
  </p>


  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :password_confiration,"Confirm" %><br />
    <%= f.password_field :password_confirmation,:size=>40 %>
  </p>
  <p>

    <%= f.hidden_field :active,:value=>true %>
  </p>
  <p>
    <%= f.label :picture %><br />
    <%= f.file_field :picture %>
  </p>
  <p>
    <%= f.label :blog_name %><br />
    <%= f.text_field :blog_name %>
  </p>
  <p>
    <%= f.label :blog_description %><br />
    <%= f.text_field :blog_description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

