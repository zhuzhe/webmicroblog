<h1>New user</h1>

<% form_for(@user,:html => {:multipart => true} ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :nick_name %><br />
    <%= f.text_field :nick_name %>
  </p>
  
  
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
   <p>
    <%= f.label :active %><br />
    <%= f.hidden_field :active,:value=>true %>
  </p>
   <p>
    <%= f.label :picture %><br />
    <%= f.file_field :picture %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>